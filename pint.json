{
    "preset": "laravel",
    "rules": {
        "concat_space": {
            "spacing": "one"
        },
        "group_import": true,
        "single_import_per_statement": false,
        "no_space_around_double_colon": true,
        "types_spaces": {
            "space": "single"
        },
        "operator_linebreak": {
            "position": "beginning"
        },
        "single_quote": {
            "strings_containing_single_quote_chars": true
        },
        "blank_line_before_statement": {
            "statements": [
                "break",
                "continue",
                "declare",
                "return",
                "throw",
                "try"
            ]
        },
        "not_operator_with_successor_space": false
    }
}
